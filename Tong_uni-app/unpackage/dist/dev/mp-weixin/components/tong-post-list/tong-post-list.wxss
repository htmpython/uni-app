.post-box .post-item {
  display: flex;
  background-color: #FFFFFF;
  margin: 30rpx;
  padding: 30rpx;
}
.post-box .left {
  width: 360rpx;
  height: 180rpx;
  margin-right: 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
}
.post-box .left image {
  width: 100%;
  height: 100%;
}
.post-box .right {
  width: 420rpx;
}
.post-box .right .user-info {
  display: flex;
  align-items: center;
}
.post-box .right .user-info image {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  margin-top: 8rpx;
}
.post-box .right .user-info text {
  margin-top: 8rpx;
  margin-left: 22rpx;
  font-size: 28rpx;
  word-break: break-all;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.post-box .right .post-content {
  color: #303133;
  margin-top: 12rpx;
  font-size: 22rpx;
  word-break: break-all;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
}
@media (prefers-color-scheme: dark) {
.post-box .post-item {
    background-color: #303133;
}
.post-box .post-item .post-content {
    color: #d6d6d6;
}
}

