.vajra-box {
  background-color: #ffffff;
  padding: 14rpx;
  margin: 20rpx;
  border-radius: 16rpx;
}
.vajra-box image {
  height: 80rpx;
  width: 80rpx;
}
.vajra-box text {
  padding: 8rpx 0;
  font-size: 24rpx;
  color: #807c7c;
}
.tabs-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 32rpx;
}
.tabs-box .left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tabs-box .left image {
  height: 42rpx;
  width: 42rpx;
}
.tabs-box .right {
  color: #989898;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.swiper-box {
  margin: -200rpx 30rpx 30rpx 30rpx;
  /* 解决轮播图圆角闪动问题 */
  will-change: transform;
}
@media (prefers-color-scheme: dark) {
.vajra-box {
    background: #323232;
}
.vajra-box text {
    color: #e1e1e1;
}
}

