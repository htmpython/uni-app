/* 保存按钮 */
.name-btn {
  background-color: #007aff;
  border-radius: 100rpx;
  height: 90rpx;
  width: 450rpx;
  line-height: 90rpx;
  color: #ffffff;
  margin-top: 100rpx;
}
.que-user-view {
  background-color: #f7f7f7;
  margin: 40rpx;
  padding: 30rpx;
  color: #888888;
  font-size: 26rpx;
  border-radius: 20rpx;
}
.que-user-view .que-user-red {
  color: #cc0000;
  margin-right: 8rpx;
  font-size: 32rpx;
}
/* 头像点击按钮 */
.avatar-wrapper {
  background-color: #f7f7f7;
  padding: 0;
  width: 140rpx !important;
  height: 180rpx;
  border-radius: 16rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  position: relative;
}
.avatar-wrapper .avatar {
  display: block;
  width: 140rpx;
  height: 140rpx;
}
.avatar-wrapper .picture {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 130rpx;
  left: 40rpx;
}
.avatar-wrapper::after {
  border: none;
  /* uni-app 默认按钮有伪类边框，需要额外去掉 */
}
.name-view {
  position: relative;
  width: 100%;
  margin-bottom: 36rpx;
  left: 8.8%;
  /* icon图标*/
  /* 输入框 */
}
.name-view .name-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  height: 55rpx;
  width: 55rpx;
  pointer-events: none;
  /* 防止图片阻挡输入框点击 */
}
.name-view .name-input {
  padding-left: 98rpx;
  /* 要比图标的宽度稍大一些，防止文字重叠 */
  font-size: 32rpx;
  width: 70%;
  height: 120rpx;
  background-color: #f7f7f7;
  border-radius: 16rpx;
}
@media (prefers-color-scheme: dark) {
.avatar-wrapper {
    background-color: #191919;
}
.name-view .name-input {
    background-color: #232323;
}
.que-user-view {
    background-color: #232323;
}
