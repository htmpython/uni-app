.top-img {
  width: 100%;
  height: 360rpx;
  display: block;
}
.user-box {
  background-color: #FFFFFF;
  margin: 0 30rpx;
  border-radius: 20rpx;
}
.user-box .info-box {
  display: flex;
  padding: 48rpx 48rpx;
  align-items: flex-end;
  position: relative;
}
.user-box .info-box .avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  margin-right: 36rpx;
}
.user-box .info-box .user-info .nick-name {
  font-size: 48rpx;
}
.user-box .info-box .user-info .description {
  color: #807c7c;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.user-box .info-box .update {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 80rpx;
  bottom: 80rpx;
}
.user-box .vajra-box image {
  height: 80rpx;
  width: 80rpx;
}
.user-box .vajra-box text {
  margin: 6rpx 0 10rpx;
  color: #807c7c;
  font-size: 24rpx;
}
button {
  padding: 0;
  background-color: #FFFFFF;
}
button::after {
  border: 0 solid rgba(0, 0, 0, 0.2);
}
.extras-box {
  border-radius: 20rpx;
  padding: 2rpx;
  margin: 25rpx;
}
.extras-box button {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
  justify-content: space-between;
}
.extras-box button .item {
  display: flex;
  align-items: center;
}
.extras-box button .icon {
  width: 65rpx;
  height: 65rpx;
  padding: 16rpx 32rpx 6rpx 32rpx;
}
.extras-box button .more {
  width: 55rpx;
  height: 55rpx;
}
.extras-box button .text {
  font-size: 30rpx;
}
.item-hover {
  background-color: #f0f3f3;
}
@media (prefers-color-scheme: dark) {
.user-box {
    background-color: #1e1e1e;
}
.extras-box {
    background-color: #1e1e1e;
}
.extras-box button {
    background-color: #1e1e1e;
}
.extras-box .item-hover {
    background-color: #191919;
}
}

